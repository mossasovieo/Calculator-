def mountain_path():
    print("You walk towards the mountains and encounter a sleeping dragon.")
    print("What will you do?")
    print("1. Try to sneak past the dragon.")
    print("2. Look for another path.")
    choice = input("Enter 1 or 2: ")
    if choice == '1':
        if random.choice([True, False]):
            print("You successfully sneak past the dragon and find a treasure chest!")
        else:
            print("The dragon wakes up and you barely escape with your life!")
    else:
        print("You find a hidden cave full of gold and jewels!")
